<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.igordurmic.testaplikacijza2nedelju.MainActivity"
    android:id="@+id/relativeLayout">


    <Button
        android:id="@+id/buttonLogin"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="250sp"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="41dp"
        android:layout_marginEnd="41dp"
        android:layout_marginRight="41dp"
        android:background="#024251"
        android:text="Uloguj se"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonRegistracijaNaLoginu"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonLogin"
        android:layout_alignBottom="@+id/buttonLogin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:background="#027251"
        android:text="@string/registruj_se"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextLogInIme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edittextLogInsifra"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/edittextLogInsifra"
        android:layout_marginTop="58dp"
        android:ems="10"
        android:hint="Ime"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edittextLogInsifra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="131dp"
        android:ems="10"
        android:hint="Sifra" />

</RelativeLayout>
